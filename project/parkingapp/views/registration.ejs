<html>

<head>
    <!-- <link rel="stylesheet" type="text/css" href="../public/stylesheets/registrationCss.css"> -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

    <style>
        @import url('https://fonts.googleapis.com/css?family=Numans');

        html,
        body {
            /* background-image: url('http://getwallpapers.com/wallpaper/full/a/5/d/544750.jpg'); */

            /* background-color:rgb(240, 154, 128); */
            background-color: rgb(88, 16, 203);

            background-size: cover;
            background-repeat: no-repeat;
            height: 100%;
            /* font-family: 'Numans', sans-serif; */
        }

        .container {
            height: 100%;
            align-content: center;
        }

        .card {
            height: 560px;
            margin-top: 2px;
            margin-bottom: auto;
            width: 400px;
            background-color: rgba(0, 0, 0, 0.5) !important;
        }

        .card-header h4 {
            color: rgb(244, 235, 235);
        }

        .input-group-prepend span {
            width: 50px;
            /* background-color: #FFC312; */
            background-color: rgba(55, 249, 2, 0.905);

            color: black;
            border: 0 !important;
        }

        input:focus {
            outline: 0 0 0 0 !important;
            box-shadow: 0 0 0 0 !important;
        }


        .signup_btn {
            color: black;
            /* background-color: #FFC312;
             */
             background-color: rgba(55, 249, 2, 0.905);

            width: 100px;
        }

        .signup_btn:hover {
            color: black;
            background-color: white;
        }

        .links {
            color: white;
        }

        .links a {
            font-size: large;
            margin-left: 10px;
            color: rgb(15, 226, 166);
        }

        .head-text {
            margin-top: 0px;
            margin-bottom: auto;

        }

        .head-text h5 {
			background-color: rgba(55, 249, 2, 0.905);
        }

        .msg-p {
            color: red;

        }

        a:hover {
            text-decoration: none;
        }



        /* navbar style */
        .breadcome-list {
            padding-top: 15px;
            padding-bottom: 100px;
        }


        .breadcome-heading a {
            text-decoration: none;
            position: absolute;
            top: 0;
            left: 120px;
            display: block;
            height: 34px;
            line-height: 34px;
            width: 200px;
            text-align: left;
            color: #1a26ad;

        }

        ul.breadcome-menu {
            text-align: right;
        }

        ul.breadcome-menu {
            padding-top: 8px;
        }

        ul.breadcome-menu1 {
            text-align: end;
            margin-right: 60px;
            padding-top: 8px;
            padding-top: 0px;
        }


        ul {
            list-style: outside none none;
            margin: 0;
            padding: 0;
        }


        ul.breadcome-menu1 li a {
            color: #fff;
            text-decoration: none;
            /* font-size: 20px; */
        }

        ul.breadcome-menu1 li {
            padding-top: 30px;
            font-size: 18px;
            display: inline-block;
            margin-right: 25px;
            color: #fff;

        }

        .dashboard_header {
            background: linear-gradient(0deg, #a123a8, 40%, #1176ac 60%);
            max-height: 110px;
        }
    </style>
</head>

<body>

    <div class="row">

        <!-- dashboard header start -->
        <div class="col-md-12 p-0">
            <div class="breadcome-area">
                <div class="container-fluid">
                    <div class="row dashboard_header">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="breadcome-list">
                                <div class="row">

                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        <div class="breadcome-heading">
                                            <!-- <h2 style="color: #f1de07;">Parking Management System</h2> -->

                                            <!-- <form role="search" class="form_input"> -->
                                            <div class="heading_tag">
                                                <a href="/">
                                                    <h4 style="color: #13f107;">Car Parking Management System</h4>
                                                </a>
                                            </div>


                                        </div>
                                    </div>
                                    <div class="col-lg-8 col-md-6 col-sm-4 col-xs-4">
                                        <ul class="breadcome-menu1">

                                            <li><a href="/">HOME</li>
                                            <li><a href="/booking" />BOOKSLOT</li>
                                            <li><a href="/login" />SIGNIN</li>
                                            <li><a href="/about" />ABOUT</li>
                                            <li><a href="#" />CONTACT</li>

                                        </ul>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- dashboard header end -->

        </div>
    </div>


    <div class="row">
        <!-- //registration form -->
        <div class="container">
            <div class="d-flex justify-content-center ">
                <div class="card ">
                    <div class="text-center head-text">
                        <h5>Parking Management System</h5>
                    </div>
                    <div class="card-header text-center">
                        <!-- <article class="card-body mx-auto" style="max-width: 400px;"> -->
                        <h4>Create Account</h4>
                    </div>
                    <p class="msg-p text-center">
                        <%=(typeof alertMsg!='undefined' )? alertMsg:''%>
                    </p>
                    <div class="card-body">
                        <form method="post" action="/register">
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                                </div>
                                <input name="name" class="form-control" placeholder="Full name" type="text">
                            </div> <!-- form-group// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                                </div>
                                <input name="email" class="form-control" placeholder="Email address" type="email"
                                    required>
                            </div> <!-- form-group// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                                </div>
                                <select class="custom-select" style="max-inline-size: 70px;">
                                    <option selected="" value="91">+91</option>
                                    <option value="92">+92</option>
                                    <option value="93">+93</option>
                                    <option value="94">+94</option>
                                </select>
                                <input name="phone" class="form-control" placeholder="Phone number" type="text">
                            </div> <!-- form-group// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-building"></i> </span>
                                </div>
                                <select class="form-control" name="vehicleType">
                                    <option selected value="0"> Select Vehicle type</option>
                                    <option value="Two Whelear">Two Whelear</option>
                                    <option value="Three Whelear">Three Whelear</option>
                                    <option value="Four Whelear">Four Whelear</option>
                                    <option value="More than 4 Whelear">More than 4 Whelear</option>

                                </select>
                            </div> <!-- form-group end.// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                <input class="form-control" placeholder="Create password" type="password"
                                    name="password" required>
                            </div> <!-- form-group// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                <input class="form-control" placeholder="Repeat password" type="password"
                                    name="confirm_password">
                            </div> <!-- form-group// -->
                            <div class="form-group">
                                <button type="submit" value="register" class="btn w-100 signup_btn"> Create Account
                                </button>
                            </div> <!-- form-group// -->
                            <!-- <p class="text-center">Have an account? <a href="">Log In</a> </p> -->
                            <div class="card-footer">
                                <div class="d-flex justify-content-center links">
                                    Already have account ?<a href="/login">Sign In</a>
                                </div>

                            </div>
                        </form>
                        <!-- </article> -->
                    </div>

                </div>
            </div>


        </div>
    </div>

</body>

</html>